{
  "compilerOptions": {
    "target": "ES2017",
    "module": "CommonJS",
    "sourceMap": true, // 生成目标文件的sourceMap文件
    "outDir": "./dist",
    "strict": true,
    "removeComments": true, // 删除注释
    "noImplicitAny": true, // 可以使用any
    "esModuleInterop": true, // 解决「只能在使用“esModuleInterop”标志时用于默认导入」
  },
  "include": [
    "src/**/*"
  ],
}
